---
import { getCollection } from "astro:content";
const authors = (await getCollection('author'));
---

<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="robots" content="noindex" />
  <title>Content Manager</title>

  <!-- Include the styles for the Netlify CMS UI, after your own styles -->
  <link rel="stylesheet" href="https://unpkg.com/netlify-cms@^1.0.0/dist/cms.css" />
  <script src="https://identity.netlify.com/v1/netlify-identity-widget.js" is:inline></script>

</head>
<body>
  <!-- Include the script that builds the page and powers Netlify CMS -->
	<script src="https://unpkg.com/decap-cms@^2.0.0/dist/cms.js" is:inline></script>
  <script define:vars={ {authors} }>


    console.log(createElement);
    createElement = createElement ?? React.createElement;

    const onChange = e => onChange( e.target.value );
    const CategoriesControl = function(props) {
      const { value = '', forID : id, classNameWrapper : className, onChange } = props;

      return React.createElement('select', { id, className, value, onChange },
        authors.map( a => h('option', { value : a.id }, `${a.data.lname}, ${a.data.fname.charAt(0).toUpperCase()}.` ))
      );
    }

    const CategoriesPreview = function(props) {
        return React.createElement('span', {}, props.value );
    };

    CMS.registerWidget('span', CategoriesControl, CategoriesPreview);
  </script>
</body>
</html>