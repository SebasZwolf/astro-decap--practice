---
import { getCollection } from "astro:content";
const authors = (await getCollection('author'));
---

<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="robots" content="noindex" />
  <title>Content Manager</title>

  <!-- Include the styles for the Netlify CMS UI, after your own styles -->
  <link rel="stylesheet" href="https://unpkg.com/netlify-cms@^1.0.0/dist/cms.css" />
  <script src="https://identity.netlify.com/v1/netlify-identity-widget.js" is:inline></script>

</head>
<body>
  <!-- Include the script that builds the page and powers Netlify CMS -->
	<script src="https://unpkg.com/netlify-cms@^1.0.0/dist/cms.js" is:inline></script>
  <script define:vars={ {authors} }>
    console.log(authors);

    var CategoriesControl = createClass({

      render: function() {
        const { value = '', forID : id, classNameWrapper : className, onChange } = this.props;

        return h('select', {
          id,
          className,
          value,
          
          onChange : ({ target }) => onChange( target.value ),
        },
          authors.map( a => h('option', { value : a.id }, `${a.data.lname}, ${a.data.fname.charAt(0).toUpperCase()}.` ))
        );
      },
    });

    var CategoriesPreview = createClass({
      render() {
        return h('span', {}, this.props.value );
      }
    });

    CMS.registerWidget('span', CategoriesControl, CategoriesPreview);

  </script>
</body>
</html>